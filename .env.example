# OpenPump API Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development
API_HOST=0.0.0.0
# Set to true to skip auth/database for testing
TEST_MODE=false

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/openpump

# Redis
REDIS_URL=redis://localhost:6379

# Solana RPC
# Get a free API key from https://www.helius.dev/
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY
HELIUS_API_KEY=YOUR_HELIUS_API_KEY

# Rate Limiting (requests per day)
RATE_LIMIT_FREE=100
RATE_LIMIT_STARTER=10000
RATE_LIMIT_PRO=100000
RATE_LIMIT_ELITE=1000000

# Caching (TTL in seconds)
CACHE_TTL_TOKEN_METADATA=300
CACHE_TTL_TOKEN_PRICE=10
CACHE_TTL_BONDING_CURVE=30
CACHE_TTL_RECENT_TOKENS=60

# Logging
LOG_LEVEL=info
